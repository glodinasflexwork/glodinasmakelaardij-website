generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String
  firstName         String?
  lastName          String?
  phone             String?
  emailVerified     Boolean  @default(false)
  emailVerifyToken  String?
  emailVerifiedAt   DateTime?
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  savedProperties   SavedProperty[]

  @@map("users")
}

model SavedProperty {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  property_id String
  title       String
  location    String
  price       String
  bedrooms    Int
  bathrooms   Int
  area        Int
  images      String[]
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, property_id])
  @@map("saved_properties")
}

model Property {
  id            String   @id @default(cuid())
  title         String
  location      String
  price         String
  originalPrice String?
  size          String
  bedrooms      Int
  bathrooms     Int
  area          Int
  energyLabel   String   @default("A")
  features      String[]
  mainImage     String?
  images        String[]
  rating        Int      @default(5)
  status        String   @default("available") // available, under_offer, sold, new
  description   String
  neighborhood  String?
  yearBuilt     Int?
  plotSize      Int      @default(0)
  heating       String?
  parking       String?
  garden        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("properties")
}


